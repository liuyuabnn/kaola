<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/diantai_znjx_iv1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#777777" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/diantai_znjx_iv1"
            android:layout_alignRight="@id/diantai_znjx_iv1"
            android:layout_margin="20dp"
            android:src="@drawable/ic_offline_radio_play_all_normal" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/diantai_znjx_tv1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="能量fm"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/diantai_znjx_tv2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="中国传统节庆-过年【文玩雅集·玩家说宝】"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/diantai_znjx_tv3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/item_live_listener_iv"
                android:text="12.3w"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/diantai_znjx_tv4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginLeft="80dp"
                android:text="6.5k"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/ic_offline_radio_play_all_normal"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>